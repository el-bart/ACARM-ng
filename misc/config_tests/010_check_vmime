if grep -q '^triggermail$' <<< "$PLUGINS"
then
  echo -n "checking for libvmime... "
  echo -e "#include <vmime/vmime.hpp>\nint main(void){ vmime::utility::url u(""); return 0; }" > "$TMP"
  if compile "$TMP" `$SRCS/triggermail/features/deps/common_dynamic_compile` `$SRCS/triggermail/features/deps/common_dynamic_link`
  then
    echo "ok"
  else
    echo "N/A"
    echo "install missing library or withdraw usage of plugins: triggermail"
    rm -f "$TMP"
    exit 2
  fi
fi
