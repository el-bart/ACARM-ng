echo -n "checking openssl version... "
cat > "$TMP" <<EOF
#include <openssl/opensslv.h>
#if OPENSSL_VERSION_NUMBER < 0x1000004fL
#error openssl version is too old
#endif
int main(void)
{
  return 0;
}
EOF
if compile "$TMP" `pkg-config openssl --cflags --libs`
then
  echo "ok"
else
  echo "too old"
  echo "minimal required version is 1.0.0"
  rm -f "$TMP"
  exit 2
fi
