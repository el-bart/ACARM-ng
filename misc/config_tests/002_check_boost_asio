echo -n "checking for boost::asio... "
cat > "$TMP" <<EOF
#include <boost/asio/ip/address.hpp>

using namespace boost::asio;

int main(void)
{
  ip::address tmp;
  return 0;
}
EOF

if compile "$TMP"
then
  echo "ok"
else
  echo "N/A"
  echo "ERROR: install missing library"
  rm -f "$TMP"
  exit 2
fi
