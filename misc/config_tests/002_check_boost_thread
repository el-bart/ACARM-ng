#!/bin/bash
echo -n "checking for boost::thread... "
echo -e "#include <boost/thread.hpp>\nint main(void){boost::thread th;return 0;}" > "$TMP"
if compile "$TMP" `$SRCS/base/features/deps/common_dynamic_link`
then
  echo "ok"
else
  echo "N/A"
  echo "boost thread not present"
  rm -f "$TMP"
  exit 2
fi
