<com:TContent ID="content">
<com:TPanel GroupingText="<font size=6 color=white>System status</font>" Width="100%">
<br/>

<center>
<h2 style="color:white;">Counters</h2>
<com:TDataGrid
   CellPadding="4"
   Width="600px"
   ID="StatusGrid"
   HorizontalAlign="Left"
   AutoGenerateColumns="false"
   HeaderStyle.BackColor="black"
   HeaderStyle.ForeColor="white"
   ItemStyle.BackColor="#c6c6d2"
   ItemStyle.Font.Size="18"
   AlternatingItemStyle.BackColor="#b2b2d0"
   ShowHeader="false"
   >

 <com:TBoundColumn
    ID="Text"
    HeaderText="Text"
    DataField="text"
    />

 <com:TBoundColumn
    ID="Value"
    HeaderText="Value"
    ItemStyle.HorizontalAlign="Right"
    DataField="value"
    />
</com:TDataGrid>

<br/><br/>
<h2 style="color:white;">Heartbeats</h2>
<com:TDataGrid
   CellPadding="4"
   Width="600px"
   ID="Heartbeats"
   AutoGenerateColumns="false"
   HeaderStyle.BackColor="black"
   HeaderStyle.ForeColor="white"
   ItemStyle.BackColor="#c6c6d2"
   ItemStyle.Font.Size="18"
   AlternatingItemStyle.BackColor="#b2b2d0"
   OnDeleteCommand="deleteItem"
   >

  <com:TTemplateColumn>
    <prop:HeaderTemplate>Owner</prop:HeaderTemplate>
    <prop:ItemTemplate>
      <com:TLabel Text="<%#$this->Parent->Data->owner%>" ForeColor="<%# $this->Parent->Data->alive=='false' ? 'Green' : 'Red' %>" />
    </prop:ItemTemplate>
  </com:TTemplateColumn>

  <com:TTemplateColumn>
    <prop:HeaderTemplate>Module</prop:HeaderTemplate>
    <prop:ItemTemplate>
      <com:TLabel Text="<%#$this->Parent->Data->module%>" ForeColor="<%# $this->Parent->Data->alive ? 'Green' : 'Red' %>" />
    </prop:ItemTemplate>
  </com:TTemplateColumn>

  <com:TTemplateColumn>
    <prop:HeaderTemplate>Module</prop:HeaderTemplate>
    <prop:ItemTemplate>
      <com:TLabel Text="<%# $this->Parent->Data->alive?'alive':'dead' %>" ForeColor="<%# $this->Parent->Data->alive ? 'Green' : 'Red' %>" />
    </prop:ItemTemplate>
  </com:TTemplateColumn>

<com:TButtonColumn
   ID="Delete"
   HeaderText="Delete"
   ItemStyle.HorizontalAlign="Center"
   Text="delete"
   CommandName="delete"
   />
</com:TDataGrid>
</center>
<br/><br/>
</com:TPanel>


<com:TClientScript PradoScripts="effects" />
</com:TContent>
