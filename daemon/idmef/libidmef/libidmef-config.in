#!/bin/sh

prefix=@prefix@
exec_prefix=@exec_prefix@

usage="\
Usage: libidmef-config [--prefix[=DIR]] [--libs] [--cflags] [--version]"

if test $# -eq 0; then
      echo "${usage}" 1>&2
      exit 1
fi

if test -z "$exec_prefix" ; then
      exec_prefix=$prefix
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test -z "$exec_prefix" ; then
	      exec_prefix=$optarg
      fi
      ;;

    --prefix)
      echo $prefix
      ;;

    --version)
      echo @VERSION@
      ;;

    --cflags)
      echo @libidmef_cflags@
      ;;

    --libs)
      echo @libidmef_libs@ 
      ;;

    *)
      echo "${usage}" 1>&2
      exit 1
      ;;

  esac
  shift
done

exit 0
