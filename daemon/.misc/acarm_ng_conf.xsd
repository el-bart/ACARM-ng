<?xml version="1.0"?>

   <xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema" >

   <xsd:element name="acarm_ng" type="acarm_ngType"/>

   <xsd:complexType name = "acarm_ngType">
     <xsd:sequence>
       <xsd:element name = "general"
                    type = "generalType"/>
       <xsd:element name = "persistency"
                    type = "persistencyType"/>
       <xsd:element name = "logger"
                    type = "loggerType"/>
       <xsd:element name = "filters"
                    type = "filterType"/>
       <xsd:element name = "triggers"
                    type = "triggerType"/>
       <xsd:element name = "preprocessor"
                    type = "preprocessorType"/>
     </xsd:sequence>
   </xsd:complexType>

   <xsd:complexType name = "generalType">
     <xsd:sequence>
       <xsd:element name = "url"
                    type = "xsd:string"/>
       <xsd:element name = "cleanupInterval"
                    type = "xsd:unsignedInt"/>
     </xsd:sequence>
   </xsd:complexType>

   <xsd:complexType name = "persistencyType">
     <xsd:sequence>
       <xsd:element name = "type"
                    type = "xsd:string"/>
       <xsd:element name = "dbname"
                    type = "xsd:string"/>
       <xsd:element name = "user"
                    type = "xsd:string"/>
       <xsd:element name = "pass"
                    type = "xsd:string"/>
       <xsd:element name = "host"
                    type = "xsd:string"/>
       <xsd:element name = "port"
                    type = "xsd:unsignedInt"/>
     </xsd:sequence>
   </xsd:complexType>

   <xsd:complexType name = "triggerType">
     <xsd:sequence>
       <xsd:element name = "gg"
                    type = "ggType"/>
       <xsd:element name = "mail"
                    type = "mailType"/>
       <xsd:element name = "jabber"
                    type = "jabberType"/>
       <xsd:element name = "file"
                    type = "fileType"/>
     </xsd:sequence>
   </xsd:complexType>

   <xsd:complexType name = "ggType">
   <xsd:attribute name = "name" type = "xsd:string" use="required"/>
     <xsd:sequence>
       <xsd:element name = "uin"
                    type = "xsd:unsignedInt"/>
       <xsd:element name = "password"
                    type = "xsd:string"/>
       <xsd:element name = "receiver_uin"
                    type = "xsd:unsignedInt"/>
       <xsd:element name = "severity_threshold"
                    type = "xsd:decimal"
                    minOccurs = "0"/>
       <xsd:element name = "alerts_count_threshold"
                    type = ""
                    minOccurs = "0"/>
     </xsd:sequence>
   </xsd:complexType>

   <xsd:complexType name = "jabberType">
   <xsd:attribute name = "name" type = "xsd:string" use="required"/>
     <xsd:sequence>
       <xsd:element name = "login"
                    type = "xsd:string"/>
       <xsd:element name = "password"
                    type = "xsd:string"/>
       <xsd:element name = "server"
                    type = "xsd:string"/>
       <xsd:element name = "receiver"
                    type = "xsd:string"/>
       <xsd:element name = "severity_threshold"
                    type = "xsd:decimal"
                    minOccurs = "0"/>
       <xsd:element name = "alerts_count_threshold"
                    type = ""
                    minOccurs = "0"/>
     </xsd:sequence>
   </xsd:complexType>

   <xsd:simpleType name = "sslType">
     <xsd:restriction base = "xsd:token">
       <xsd:enumeration value = "ssl"/>
       <xsd:enumeration value = "starttls"/>
     <xsd:restriction>
   </xsd:simpleType>

   <xsd:complexType name = "mailType">
   <xsd:attribute name = "name" type = "xsd:string" use="required"/>
     <xsd:sequence>
       <xsd:element name = "from"
                    type = "xsd:string">
       <xsd:element name = "to"
                    type = "xsd:string"/>
       <xsd:element name = "server"
                    type = "xsd:string"/>
       <xsd:element name = "port"
                    type = "xsd:unsignedInt"/>
       <xsd:element name = "security"
                    type = "sslType"/>
       <xsd:element name = "ssl"
                    type = "xsd:boolean"/>
       <xsd:element name = "user"
                    type = "xsd:string"
                    minOccurs = "0"/>
       <xsd:element name = "password"
                    type = "xsd:string"/>
       <xsd:element name = "severity_threshold"
                    type = "xsd:decimal"
                    minOccurs = "0"/>
       <xsd:element name = "alerts_count_threshold"
                    type = ""
                    minOccurs = "0"/>
     </xsd:sequence>
   </xsd:complexType>

   <xsd:complexType name = "fileType">
   <xsd:attribute name = "name" type = "xsd:string"/>
     <xsd:sequence>
       <xsd:element name = "outdir"
                    type = "xsd:string"/>
       <xsd:element name = "severity_threshold"
                    type = "xsd:decimal"
                    minOccurs = "0"/>
       <xsd:element name = "alerts_count_threshold"
                    type = ""
                    minOccurs = "0"/>
     </xsd:sequence>
   </xsd:complexType>

   <xsd:complexType name = "filterType">
   <xsd:attribute name = "name" type = "xsd:string"/>
     <xsd:sequence>
       <xsd:element name = ""
                    type = ""/>
     </xsd:sequence>
   </xsd:complexType>

  <xsd:complexType name = "loggerType">
     <xsd:sequence>
       <xsd:element name = ""
                    type = ""/>
     </xsd:sequence>
   </xsd:complexType>
  </xsd:schema>
